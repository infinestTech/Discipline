/**
 * Firestore Security Rules for Habit Tracker
 * 
 * Copy these rules to your Firebase Console:
 * Firebase Console > Firestore Database > Rules
 * 
 * These rules ensure that:
 * 1. Users can only access their own data
 * 2. Authentication is required for all operations
 * 3. Data is stored securely under user-specific paths
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User document - users can only access their own user document
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Habits subcollection
      match /habits/{habitId} {
        allow read, write: if isOwner(userId);
        
        // Validate habit data structure on write
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['name', 'targetHoursPerDay', 'colorTag'])
          && request.resource.data.name is string
          && request.resource.data.targetHoursPerDay is number
          && request.resource.data.colorTag in ['green', 'cyan', 'red', 'yellow', 'purple'];
          
        allow update: if isOwner(userId)
          && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['id', 'createdAt']));
      }
      
      // Week logs subcollection
      match /weekLogs/{weekLogId} {
        allow read, write: if isOwner(userId);
        
        // Validate weekLog data structure on write
        allow create: if isOwner(userId)
          && request.resource.data.keys().hasAll(['weekId', 'habitId', 'daily'])
          && request.resource.data.weekId is string
          && request.resource.data.habitId is string
          && request.resource.data.daily is list
          && request.resource.data.daily.size() == 7;
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
